<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/recipe_video"
        android:name="com.nds.baking.king.views.Fragments.RecipeVideoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="@string/recipe_video_fragment_tag"
        android:layout_alignParentTop="true"/>

    <fragment
        android:id="@+id/recipe_steps_detail"
        android:name="com.nds.baking.king.views.Fragments.RecipeStepsDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_video"
        android:tag="@string/steps_detail_fragment_tag" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageButton android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tool:src="@mipmap/ic_launcher_round"/>
        <ImageButton android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tool:src="@mipmap/ic_launcher_round"/>
    </RelativeLayout>
</RelativeLayout>